[run]
branch = True
timid = True
source =
        .
omit =
        class_under_test.py
        *__init__.py
        testing/*
        tests/*
        */tests/*

[report]
exclude_lines =
        # Don't complain if tests don't hit defensive assertion code:
        raise AssertionError
        raise NotImplementedError

        # Don't complain if non-runnable code isn't run:
        if __name__ == .__main__.:
ignore_errors = True

[html]
directory = coverage-html

